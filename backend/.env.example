# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Court Listener API (Free with registration)
# Get your API key at: https://www.courtlistener.com/api/
COURT_LISTENER_API_KEY=your_court_listener_api_key_here

# Alpha Vantage API (Free tier available)
# Get your API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.docx,.txt,.doc

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Translation Services (Optional - uses free public instances if not provided)
# LibreTranslate API endpoints are used by default
LIBRETRANSLATE_API_URL=https://translate.argosopentech.com

# Legal Database Configuration
LEGAL_DATABASE_TIMEOUT=10000
MAX_PRECEDENT_RESULTS=10

# Financial Analysis Configuration
FINANCIAL_ANALYSIS_TIMEOUT=15000
DEFAULT_INDUSTRY_RISK_MULTIPLIER=1.0
